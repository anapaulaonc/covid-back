  </div>

  <div class="field">
    <%= form.label :cases %>
    <%= form.number_field :cases %>
  </div>

  <div class="field">
    <%= form.label :deaths %>
    <%= form.number_field :deaths %>
  </div>

  <div class="field">
    <%= form.label :suspects %>
    <%= form.number_field :suspects %>
  </div>

  <div class="field">
    <%= form.label :datetime %>
